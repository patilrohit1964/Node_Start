<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <!-- AOS CSS for animations -->
    <link
      href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
      rel="stylesheet"
    />
    <!-- Custom CSS for styling -->
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f4f9;
        color: #333;
      }

      header {
        background-color: #28a745;
        color: white;
        text-align: center;
        padding: 80px 0;
        font-size: 3rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      main {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        animation: fadeIn 1s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .product-card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        width: 300px;
      }

      .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
      }

      .product-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .product-card .product-info {
        padding: 20px;
      }

      .product-card h2 {
        font-size: 1.6rem;
        margin: 10px 0;
        color: #333;
      }

      .product-card p {
        font-size: 1rem;
        margin-bottom: 10px;
        color: #555;
      }

      .product-card .price {
        font-weight: bold;
        font-size: 1.2rem;
        color: #28a745;
      }

      a {
        text-decoration: none;
        color: #28a745;
        font-weight: bold;
        padding: 8px 20px;
        margin: 10px;
        border: 2px solid #28a745;
        border-radius: 30px;
        transition: all 0.3s ease;
      }

      a:hover {
        background-color: #28a745;
        color: white;
        transform: scale(1.05);
      }

      ul {
        display: grid;
        grid-template-columns: repeat(
          3,
          1fr
        ); /* Creates 3 equal-width columns */
        gap: 20px; /* Adds space between the grid items */
        list-style-type: none; /* Removes the default list bullets */
        padding: 0; /* Removes default padding */
        margin: 80px auto; /* Adds some space above the grid */
      }

      ul li {
        margin-bottom: 15px;
        list-style-type: none;
      }

      footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 20px;
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <header data-aos="fade-down">
      <h1>Our Products</h1>
    </header>

    <main data-aos="fade-up">
      <ul>
        <% products.forEach(product => { %>
        <li data-aos="zoom-in-up" data-aos-delay="200">
          <div class="product-card">
            <img src="<%= product.imageUrl %>" alt="<%= product.name %>" />
            <div class="product-info">
              <h2><%= product.name %></h2>
              <p><%= product.description %></p>
              <p class="price">$<%= product.price %></p>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
      <div>
        <a href="/">Home</a> | <a href="/about">About</a> |
        <a href="/contact">Contact</a>
      </div>
    </main>

    <footer>
      <p>Footer content here | Â© 2025 Our Website</p>
    </footer>

    <!-- AOS JS for animations -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
      // Initialize AOS
      AOS.init({
        duration: 1200, // Animation duration in milliseconds
        once: true, // Animation occurs once
      });
    </script>
  </body>
</html>
